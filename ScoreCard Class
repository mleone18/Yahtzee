class Scorecard(): 
	def __init__(self, dice):
		self.dice = dice[]

	def checkAces(dice):
		score = self.dice.count(1)
			return score
		else:
			print('Cant use aces; already done')
			return False

	def checkTwos(dice):
		twos = self.dice.count(2)
			score = twos*2
			return score
		else:
			print('Cant use twos; already done')
			return False

	def checkThrees(dice):
		threes = self.dice.count(3)
			score = threes*3
			return score
		else:
			print('Cant use threes; already done')
			return False

	def checkFours(dice):
		fours = self.dice.count(4)
			score = fours*4
			return score
		else:
			print('Cant use fours; already done')
			return False

	def checkFives(dice):
		fives = self.dice.count(5)
			score = fives*5
			return score
		else:
			print('Cant use fives; already done')
			return False

	def checkSixes(dice):
			sixes = self.dice.count(6)
				score = sixes*6
				return score
			else:
				print('Cant use sixes; already done')
				return False


